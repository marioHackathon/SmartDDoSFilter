table ip nftlb {
	map tcp-services {
		type ipv4_addr . inet_service : verdict
		elements = { 192.168.0.100 . 80 : goto lb01,
			     192.168.0.101 . 82 : goto lb02 }
	}

	map tcp-services-back {
		type ipv4_addr . inet_service : ipv4_addr
	}

	chain prerouting {
		type nat hook prerouting priority filter; policy accept;
		ip daddr . tcp dport vmap @tcp-services
	}

	chain postrouting {
		type nat hook postrouting priority srcnat; policy accept;
		ct mark 0x80000000/1 masquerade
		snat to ip daddr . tcp dport map @tcp-services-back
	}

	chain lb01 {
		ct mark set 0x80000000 dnat to numgen random mod 10 map { 0-4 : 192.168.0.10, 5-9 : 192.168.0.11 }
	}

	chain lb02 {
		dnat to numgen inc mod 10 map { 0-4 : 192.168.0.12, 5-9 : 192.168.0.13 }
	}
}
